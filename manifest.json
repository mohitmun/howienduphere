{
  "name": "HowIendUpHere",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Keeps track of referrer for every link visit, Later analyze your browsing pattern",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "options_page": "src/options/index.html",
  "page_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "page action demo",
    "default_popup": "src/page_action/page_action.html"
  },
  "permissions": [
    "tabs",
    "unlimitedStorage",
    "storage"
  ]
}
